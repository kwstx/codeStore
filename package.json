{
  "name": "engram",
  "displayName": "Engram",
  "description": "The gateway to code memory. A privacy-first VS Code extension that indexes your prompt history and prevents repeated mistakes.",
  "readme": "README.md",
  "version": "1.7.0",
  "publisher": "use-engram",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kwstx/Engram"
  },
  "categories": [
    "Other",
    "Programming Languages",
    "Machine Learning",
    "Education"
  ],
  "keywords": [
    "ai-bug-prevention",
    "vibe-coding",
    "memory",
    "copilot-guard",
    "local-privacy",
    "shadow-guard",
    "cursor-rules"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "engram.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "engram.excludeFile",
        "title": "Engram: Exclude this File"
      },
      {
        "command": "engram.importRules",
        "title": "Engram: Import Rules (JSON)"
      },
      {
        "command": "engram.loadStarterKit",
        "title": "Engram: Load Starter Kit (Common Bugs)"
      },
      {
        "command": "engram.architectPlan",
        "title": "Engram: The Architect (Plan Implementation)"
      }
    ],
    "keybindings": [
      {
        "command": "engram.acceptIntuition",
        "key": "ctrl+shift+space",
        "when": "editorTextFocus && config.engram.predictiveIntuition"
      }
    ],
    "menus": {},
    "configuration": {
      "type": "object",
      "title": "Engram",
      "properties": {
        "engram.sensitivity": {
          "type": "string",
          "enum": [
            "breeze",
            "strict"
          ],
          "default": "breeze",
          "description": "Controls how often Engram warns you. 'Breeze' is quiet (3+ mistakes), 'Strict' is aggressive (2+ mistakes)."
        },
        "engram.predictiveIntuition": {
          "type": "boolean",
          "default": true,
          "description": "Enable 'Predictive Intuition' (Pre-Cog): AI-ghost text that anticipates your next move."
        },
        "engram.intuitionDelay": {
          "type": "number",
          "default": 1200,
          "description": "Delay (ms) before Intuition triggers. Default: 1200ms."
        },
        "engram.experimental.photographicMemory": {
          "type": "boolean",
          "default": false,
          "description": "Enable 'Photographic Memory' (Hidden Beta): Vector-based history of file saves.",
          "scope": "resource"
        },
        "engram.experimental.hippocampus": {
          "type": "boolean",
          "default": false,
          "description": "Enable 'Hippocampus' (Hidden Beta): Episodic memory and auto-journaling.",
          "scope": "resource"
        },
        "engram.experimental.architect": {
          "type": "boolean",
          "default": false,
          "description": "Enable The Architect: Graph-aware planning (Hidden Beta).",
          "scope": "resource"
        },
        "engram.experimental.promptInjector": {
          "type": "boolean",
          "default": false,
          "description": "Enable Prompt Injector: Type '??' to generate and copy a context-aware AI prompt (Hidden Beta).",
          "scope": "resource"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.17.0",
    "glob": "^8.1.0",
    "mocha": "^11.0.1",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/diff": "^7.0.2",
    "@xenova/transformers": "^2.14.0",
    "diff": "^8.0.2",
    "safe-regex": "^2.1.1",
    "uuid": "^11.0.4",
    "vectordb": "^0.4.5"
  }
}